<div class="crave-container">
  <div class="craving-content">
    <div class="load-form">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: 'ui-autocomplete-input'}, id: "user-input"; %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" }, id: "user-input";  %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "crave-button-primary-lg"%>
      </div>
    <% end %>

   <p class='form-links'><%= link_to "Sign up", new_user_registration_path%></p>
    <p class='form-links'><%= link_to "Forgot your password?", new_user_password_path %></p>
  </div>
  </div>
</div>
