<div class="crave-container">
  <div class="craving-content">
    <div class="load-form">
    <h2></h2>

    <!-- new dish form -->
    <%= simple_form_for(@dish) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name,
                    required: true
        %>
        <%= f.input :price,
                    required: true
        %>
        <%= f.input :category,
                    required: true
        %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "", class: "crave-button-primary-lg" %>
      </div>
    <% end %>

