<!--BUTTON (search by dish) -->
<div class="craving-content" style= "border: 1px solid white;">
  <form action="">
    <input type="text" placeholder="Your location" class="search-bar" style="margin-bottom: 24px">
  </form>
</div>

<!--CARD (search by dish)-->
<div class="search-card">
  <div class="craving-dish-search" style="background-image: url(<%= image_path 'wafles.jpeg' %>)">
  </div>

  <!--CARD (info of one dish)-->
  <div class="craving-content">
    <div class="craving-dish-info">
      <p>Osaka Burger</p>
      <p>Timesburg</p>
      <p class="card-dish-km">0.5km</p>
    </div>
  </div>
</div>

<div
  id="map"
  style="width: 100%; height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

