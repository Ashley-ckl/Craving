<h1><%= @count %> dishes in <%= @city %></h1>
<div class="row">
  <div class="col-xs-12 col-sm-8 offset-sm-2">
    <% @dishes.each do |dish| %>
      <div class="card">
        <div class="card-image">
          <%= cl_image_tag result.photo %>
        </div>
        <div class="card-info">
          <h3><%= dish.name %></h3>
          <p><%= dish.rating %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

