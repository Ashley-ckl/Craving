
<!--BUTTON (search by dish) -->
<div class="craving-content">

  <form action="">
    <input type="text" placeholder="Search by dish" class="search-bar" style="margin-bottom: 25px">
  </form>

  <p><strong><%= @count %> dishes in <%= @city %></strong></p>
</div>

<!--CARD (search by dish)-->


  <div class="crave-container">
    <div class="craving-dish-search" style="background-image: url(<%= image_path 'wafles.jpeg' %>)">
    </div>

    <div class="craving-content">
      <div class="craving-dish-info">
        <div class= "info">
          <p><strong>Osaka Burger</strong></p>
          <p>Timesburg</p>
        </div>
        <div class= "info">
          <p>4.0 <i class="fas fa-star checked"></i><i class="fas fa-star checked"></i><i class="fas fa-star checked"></i><i class="fas fa-star checked"></i><i class="fas fa-star "></i></p>
          <p>0.5km</p>
        </div>
      </div>
      <div
      id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>


<div class="craving-content">
  <div class="row">
    <div class="col-xs-12 col-sm-8 offset-sm-2">
      <% @restaurants.each do |dish| %>
      <div class="card">
        <div class="card-image">
          <%#= cl_image_tag result.photo %>
        </div>
        <div class="card-info">
          <h3><%= dish.name %></h3>
          <!--  <p><%#= dish.rating %></p> -->
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div>
</div>

