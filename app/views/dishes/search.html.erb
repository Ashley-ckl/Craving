<div class="container">
  <h1>Best dishes in <%=  %></h1>
  <div class="row">
    <div class="col-xs-12 col-sm-8 offset-sm-2">
      <% @results.each do |result| %>
        <div class="card">
          <div class="card-image">
            <%= cl_image_tag result.photo %>
          </div>
          <div class="card-info">
            <h3><%= result.name %></h3>
            <p><%= result.rating %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
