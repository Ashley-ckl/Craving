
<div class="crave-container">

<div class="craving-content" >
    <input type="text" placeholder="Your location" class="search-bar" style="margin-bottom: 24px; margin-top: 16px;">
</div>


<div class="search-card">
  <div class="craving-dish-search" style="background-image: url(<%= image_path 'wafles.jpeg' %>)">
  </div>

  <!--CARD (info of one dish)-->
  <div class="craving-content">
    <div class="craving-dish-info">
      <p>Osaka Burger</p>
      <p>Timesburg</p>
      <p>0.5km</p>
    </div>
  </div>
</div>

<div
  id="map"
  style="width: 100%; height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>


<div class="craving-content">
  <div class="row">
    <div class="col-xs-12 col-sm-8 offset-sm-2">
      <h1>Dishes</h1>
      <% @results.each do |result| %>
        <h3><%= result.name %></h3>
      <% end %>
    </div>
  </div>
</div>
</div>

