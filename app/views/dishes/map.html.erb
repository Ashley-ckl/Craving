
<div
id="map"
style="margin-bottom: 16px; height: 300px; z-index: 0;"
data-markers="<%= @markers.to_json %>"
data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
<%= link_to search_dishes_path(address: params[:address]) do %>
<div class="list-av">
  <div>
    <h3><i class="far fa-times-circle"></i></h3>
  </div>
</div>
<% end %>
<% @dishes.each do |dish| %>
  <%= link_to dish_path(dish) do %>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
<div class="craving-dish-search d-block w-100" style="background-image: url(<%= cl_image_path dish.photo %>)">
  </div>
  <div class="craving-dish-info">
    <div class= "info">
      <h5 class= "name"><strong><%= dish.name %></strong></h5>
      <p class= "name"><%= dish.restaurant.name %></p>
    </div>
    <div class= "info">
      <h5 class="rating"><strong><%= dish.rating.to_d.round(1, :truncate).to_f %></strong>
        <%= render 'dishes/rating', rating: dish.rating %>
      </h5>
      <h5 class="distance">
        <%= distance_to_user(@user_location, dish.restaurant) %>
      </h5>
    </div>
  </div>
    </div>
     <% end %>
<% end %>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>










